{% extends 'base.html.twig' %}

{% block title %}Véhicule 2{% endblock %}

{% block body %}
    <h1 style="color: #28A5C5;
               font-size: 4rem;
               text-align: center;
               width: 100%;
               margin-left: auto;
               margin-right: auto;
               align-items: center;
    ">
        Véhicule 2
    </h1>

    <table class="table">
        <thead>
        <tr>
            <th>Numero du colis :</th>
            <th>Nombre de colis :</th>
            <th>Laboratoire de chargement :</th>
            <th>Laboratoire de livraison :</th>
            <th>Action :</th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.product.number }}</td>
                <td>{{ item.product.nombre }}</td>
                <td>{{ item.product.loadinglab }}</td>
                <td>{{ item.product.deliverylab }}</td>
                <td>
                    <a href="{{ path('car_two_remove', {id: item.product.id}) }}" class="btn btn-danger">Supprimer</a>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked">
                        <label class="form-check-label" for="flexSwitchCheckChecked">Vérifier</label>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Votre camion est vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
