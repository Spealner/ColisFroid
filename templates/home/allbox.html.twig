{% block body %}

<!-- ALLBOX -->
<section class="pt-8 pt-md-11">
    <div class="container" style="margin-bottom: 15px">
        <div class="row">
            <div class="col-12">

                <!-- Heading -->
                <h2 class="col-12"
                    style="background-color: #28A5C5;
                           color: #FFF;
                           font-size: 4rem;
                           text-align: center;
                           width: 100%;
                           margin-left: auto;
                           margin-right: auto;
                           align-items: center;
                ">
                    Tous les colis :
                </h2>

            </div>
        </div>
        <!-- / .row -->
        <div class="row">
            {% for colis in colis %}
                <div class="col-12">

                    <!-- Checkbox -->
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                        <label class="form-check-label" for="inlineCheckbox1">Véhicule 1</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
                        <label class="form-check-label" for="inlineCheckbox2">Véhicule 2</label>
                    </div>

                    <!-- Card -->
                    <div class="card card-row shadow-light-lg mb-6">
                        <div class="row gx-0">
                            <div class="col-12 col-md-6">

                                <!-- Body -->
                                <p class="card-body">

                                    <!-- Heading -->
                                    <h3>N° du Coli : {{ colis.number }}</h3>
                                    <h4>Nombre de colis :  {{ colis.nombre }}</h4>

                                    <!-- Text -->
                                    <p class="mb-0 text-muted">
                                        Labo de Chargement : {{ colis.loadinglab }}
                                    </p>

                                    <p class="mb-0 text-muted">
                                        Labo de Livraison : {{ colis.deliverylab }}
                                    </p>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <!-- / .row -->
    </div>
    <!-- Bouton -->
    <div class="container" style="align-items: center">
        <input type="checkbox" class="btn-check" id="btn-check-1" checked autocomplete="off">
        <label class="btn btn-primary" for="btn-check-2">Véhicule 1</label>

        <input type="checkbox" class="btn-check" id="btn-check-2" checked autocomplete="off">
        <label class="btn btn-primary" for="btn-check-2">Véhicule 2</label>
    </div>
    <!-- / .container -->
    <div class="d-flex justify-content-center">
        {% do colis.setPageRange(2) %}
        {{ knp_pagination_render(colis, 'base/pagination.html.twig') }}
    </div>
</section>

{% endblock %}