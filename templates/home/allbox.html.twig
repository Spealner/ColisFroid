{% block body %}

<!-- ALLBOX -->
<section class="pt-8 pt-md-11">
    <div class="container" style="margin-bottom: 15px">
        <div class="row">
            <div class="col-12">

                <!-- Heading -->
                <h2 class="col-12"
                    style="background-color: #28A5C5;
                           color: #FFF;
                           font-size: 4rem;
                           text-align: center;
                           width: 100%;
                           margin-left: auto;
                           margin-right: auto;
                           align-items: center;
                ">
                    Tous les colis :
                </h2>

            </div>
        </div>
        <!-- / .row -->
        <div class="row">
            {% for colis in colis %}
                <div class="col-12">

                    <!-- Card -->
                    <div class="card card-row shadow-light-lg mb-6">
                        <div class="row gx-0">
                            <div class="col-12 col-md-6">

                                <!-- Body -->
                                <p class="card-body">

                                    <!-- Heading -->
                                    <h3>N° du Coli : {{ colis.number }} / {{ colis.nombre }}</h3>

                                    <!-- Text -->
                                    <p class="mb-0 text-muted">
                                        Labo de Chargement : {{ colis.loadinglab }}
                                    </p>

                                    <p class="mb-0 text-muted">
                                        Labo de Livraison : {{ colis.deliverylab }}
                                    </p>

                                <div style="margin-bottom: 10px">
                                    <a
                                        href="{{ path('car_one_add', {id: colis.id}) }}"
                                        class="btn btn-primary"
                                    >Véhicule 1</a>
                                    <a
                                        href="{{ path('car_two_add', {id: colis.id}) }}"
                                        class="btn btn-primary"
                                    >Véhicule 2</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <!-- / .row -->
    </div>
    <!-- / .container -->
    <div class="d-flex justify-content-center">
        {% do colis.setPageRange(2) %}
        {{ knp_pagination_render(colis, 'base/pagination.html.twig') }}
    </div>
</section>

{% endblock %}