{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% form_theme addUsersForm 'bootstrap_5_layout.html.twig' %}

{% block body %}
    <!-- CONTENT -->
    <section
            style=" background-color: #504e4e;
                    color: #18DCFF;
            ">
        <div class="container d-flex flex-column">
            <div class="row align-items-center justify-content-center gx-0 min-vh-100">
                <div class="col-12 col-md-6 col-lg-4 py-8 py-md-11">

                    <!-- Heading -->
                    <h1 class="mb-0 fw-bold" style="text-align: center">
                        S'enregistrer
                    </h1>
                    <!-- Form -->
                    <form
                        method="post"
                        class="mb-6"
                    >
                    {{ form_start(addUsersForm) }}
                    {{ form_row(addUsersForm.email) }}
                    {{ form_row(addUsersForm.plainPassword, {
                        label: 'Password'
                    }) }}
                    {{ form_end(addUsersForm) }}
                    </form>
                </div>
            </div>
            <!-- / .row -->
        </div>
        <!-- / .container -->
    </section>
{% endblock %}
