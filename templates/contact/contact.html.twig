{% extends 'base.html.twig' %}

{% block title %}Nous-Contactez !{% endblock %}

{% form_theme ContactForm 'bootstrap_5_layout.html.twig' %}

{% block body %}
    <section style="background-color: #504e4e; font-family: 'Montserrat', sans-serif;">
        <div class="container d-flex flex-column">
            <div class="row align-items-center justify-content-between gx-0 min-vh-100">

                <div class="col-12 col-md-5 align-self-stretch" style="padding-top: 90px">
                    <div class="d-md-none img-cover"></div>
                    <img alt="..." src="/img/test.jpg" height="80%" width="640">
                    <div class="d-none d-md-block vw-50 h-100 float-end bg-cover">
                    </div>
                </div>
                <div class="col-12 col-md-6 py-8 py-md-11" style="color: #28A5C5">
                    <h2 class="fw-bold text-center mb-2">
                        Nous-contactez.
                    </h2>

                    <p class="fs-lg text-center text-muted mb-0">
                        Une question ? N'hesitez pas à nous contactez.
                    </p>

                    <hr class="hr-sm my-6 my-md-8 mx-auto bg-gray-300" style="color: #28A5C5;">

                    {{ form_start(ContactForm) }}
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}

                    <div class="my-custom-class-for-errors">
                        {{ form_errors(ContactForm) }}
                    </div>

                    <div class="form-group mb-5">
                        <label class="form-label" for="contactSociete" style="color: #28A5C5">
                            Société :
                        </label>
                        {{ form_widget(ContactForm.societe) }}
                    </div>

                    <div class="form-group mb-5">
                        <label class="form-label" for="contactName" style="color: #28A5C5">
                            Nom :
                        </label>
                        {{ form_widget(ContactForm.name) }}
                    </div>

                    <div class="form-group mb-5">
                        <label class="form-label" for="contactEmail" style="color: #28A5C5">
                            E-mail :
                        </label>
                        {{ form_widget(ContactForm.email) }}
                    </div>

                    <div class="form-group mb-5">
                        <label for="contactMessage" style="color: #28A5C5">
                            Message :
                        </label>
                        {{ form_widget(ContactForm.message) }}
                    </div>

                    <div class="form-group mb-0">
                        {{ form_widget(ContactForm.envoyer) }}
                    </div>

                    {{ form_end(ContactForm) }}

                </div>
            </div>
        </div>
    </section>
{% endblock %}

