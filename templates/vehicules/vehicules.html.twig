{% extends 'base.html.twig' %}

{% block title %}Tous les véhicules{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8 col-xl-12">
            <div class="card">
                <div class="card-header"
                     style="color: #28A5C5;
                        font-size: 4rem;
                        text-align: center;
                        width: 100%;
                        margin-left: auto;
                        margin-right: auto;
                        align-items: center;
                ">Tous nos Véhicules :</div>
                <table class="table table-striped table-hover mb-0">
                    <thead>
                    <tr>
                        <th class="text-center text-uppercase">Numéro du véhicule :</th>
                        <th class="text-center text-uppercase">Nom du véhicule :</th>
                        <th class="text-center text-uppercase">Actions :</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for vehicules in vehicules %}
                        <tr>
                            <td class="text-center align-middle">{{ vehicules.id }}</td>
                            <td class="text-center align-middle">{{ vehicules.nom }}</td>
                            <td class="text-center align-middle">
                                <a
                                    href="{{ path('vehicule_delete', {id: vehicules.id}) }}"
                                    class="btn btn-danger"
                                    onclick="return confirm('Attention ceci va supprimer le véhicule')"
                                >
                                    Supprimer
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center">Vous n'avez aucun véhicules</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
